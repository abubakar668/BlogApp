<h1>Edit Post</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, required: true %>
  </div>
  <div class="actions">
    <%= form.submit 'Update Post', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back to Posts', posts_path, class: 'btn btn-link' %>
